                    android:padding="8dp"/>
                <TextView
                    android:text="1.9"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="8dp"/>
                <TextView
                    android:text="7.0"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
