                <TextView
                    android:text="3453"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="8dp"/>
                <TextView
                    android:text="3463"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="8dp"/>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_blue"/>

            <TableRow>
                <TextView
                    android:text="Distance"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="8dp"/>
                <TextView
                    android:text="1.4"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="8dp"/>
                <TextView
                    android:text="5.9"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="8dp"/>
                <TextView
                    android:text="3.8"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
