                <TextView
                    android:text="3.4"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="8dp"/>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_blue"/>

            <TableRow>
                <TextView
                    android:text="Calories"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="8dp"/>
                <TextView
                    android:text="454"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="8dp"/>
                <TextView
                    android:text="342"
