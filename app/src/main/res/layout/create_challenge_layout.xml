<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundd"
    tools:context=".ui.main.">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="Create your challenge"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/createChallengeName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Challenge name"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/input_round"
            android:inputType="text"
            android:textSize="20sp"/>

        <!-- maybe asta? https://abhiandroid.com/ui/datepicker -->

        <EditText
            android:id="@+id/challengeStartDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Start date"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/input_round"
            android:inputType="date"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/challengeEndDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:hint="End date"
            android:background="@drawable/input_round"
            android:inputType="date"
            android:textSize="20sp"
            android:textColor="@color/light_blue" />

        <EditText
            android:id="@+id/challengeInviteFriends"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:hint="Invite Friends"
            android:background="@drawable/input_round"
            android:inputType="text"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/create_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="20dp"
            android:background="@drawable/button_round_edges"
            android:text="CREATE CHALLENGE"
            android:textColor="@color/white" />
    </LinearLayout>

</FrameLayout>